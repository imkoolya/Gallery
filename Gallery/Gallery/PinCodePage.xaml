<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gallery.PinCodePage">
    
    <ContentPage.Content>
        
        <StackLayout Padding="20" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
            
            <Label Text="Добро пожаловать в Галерею" FontSize="22" />
            <Entry x:Name="PinEntry" Placeholder="Введите PIN-код" MaxLength="4" IsPassword="True" Keyboard="Numeric" />
            <Button Text="Подтвердить" Clicked="OnConfirmButtonClicked" CornerRadius="20"/>
            
        </StackLayout>
        
    </ContentPage.Content>
    
</ContentPage>